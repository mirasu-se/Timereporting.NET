@model WorkplacePreviewModel

<div class="justify-content-center text-center">
    <div class="m-2">
        <label class="d-block p-2 m-2">Välj API-alternativ:</label>
        <select class="api-select" id="api-endpoint">
            <option value="https://arbetsprov.trinax.se/api/v1" selected>Trinax Web API</option>
            <option value="http://localhost:5000/api/v1">Fallback API</option>
        </select>
    </div>
</div>

<section id="filters" class="row">
    <div class="btn-group d-block text-center">
        <a class="btn btn-secondary mt-4 mb-4" asp-controller="Workplace" asp-action="CreateWorkplace">
            <span>LÄGG TILL ARBETSPLATS</span>
            <i class="bi bi-building-add"></i>
        </a>
    </div>
</section>



<table id="workplace-table" class="table table-striped mt-4">
    <thead>
        <tr>
            <th scope="col" class="col-2">Id</th>
            <th scope="col" class="col-4">Arbetsplatsnamn</th>
            <th scope="col" class="col-4">Skapade tid</th>
            <th scope="col" class="col-2">Handlingar</th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>
<div id="modal-container"></div>



<!-- Include required JS modules based on environment -->
<environment include="Development">
    <script src="~/js/previewWorkplaceModule/previewWorkplaceModule.js" asp-append-version="true"></script>
</environment>

<environment exclude="Development">
    <script src="~/js/previewWorkplaceModule/previewWorkplaceModule.min.js" asp-append-version="true"></script>
</environment>
