<!-- Start login modal -->
<div class="modal fade" id="appLoginModal" tabindex="-1" aria-labelledby="appLoginModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <!-- Modal title -->
                <h5 class="modal-title" id="appLoginModalLabel">User Login</h5>
                <!-- Close button -->
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body mt-5">
                <div class="text-center text-muted mb-4">
                    <p class="cool-text">Unlock the magic with your credentials:</p>
                    <p class="cool-text">
                        Use the secret login spell to enter:
                    </p>
                    <p class="credentials">
                        <strong>Email:</strong> wizard@magicalrealm.com
                        <br>
                        <strong>Password:</strong> Abracadabra123!
                    </p>
                </div>
                <form id="account" method="post">
