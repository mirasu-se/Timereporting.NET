                        <span class="invalid-feedback" style="display: block"></span>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-secondary my-4" type="submit">Sign in</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer text-center justify-content-center">
                <p class="text-center mt-3" tabindex="-1">Don't have an account? Create a new one, or use your existing account and login with:</p>
                <div class="d-flex" tabindex="-1">
                    <!-- Google login button -->
                    <button class="btn btn-outline-dark btn-icon m-1" tabindex="-1">
                        <i class="bi bi-google"></i>
                        <span class="m-1">Google</span>
                    </button>
                    <!-- LinkedIn login button -->
                    <button class="btn btn-outline-dark btn-icon m-1" tabindex="-1">
                        <i class="bi bi-linkedin"></i>
                        <span class="m-1">LinkedIn</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
